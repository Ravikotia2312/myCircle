<body>
  <script src="./javascripts/demo-theme.min.js?1674944402"></script>
  <div class="page" id="account-settings">
    <!-- Navbar -->
    <!-- Page body -->
    <div class="page-body">
      <div class="container-xl">
        <div class="col">
                <h2 class="page-title">
                  Account
                </h2>
              </div>
        <div class="card">
          <div class="row g-0">
            <div class="col-3 d-none d-md-block border-end">
              <div class="card-body">
                <h4 class="subheader">Business settings</h4>
                <div class="list-group list-group-transparent">
                  <a
                    href="./settings.html"
                    class="list-group-item list-group-item-action d-flex align-items-center active"
                  >My Account</a>
                </div>
                <h4 class="subheader mt-4">Experience</h4>
                <div class="list-group list-group-transparent">
                  <a
                    href="#"
                    class="list-group-item list-group-item-action"
                  >Give Feedback</a>
                </div>
              </div>
            </div>
            <div class="col d-flex flex-column">
              <div class="card-body">
                <h2 class="mb-4">My Account</h2>
                <h3 class="card-title">Profile Details</h3>
                <div class="row align-items-center">

                  <div class="col-auto"><span
                      class="avatar avatar-xl"
                      style='background-image: url(/uploads/{{profile}})'
                    ></span>

                  </div>
                  <br>
                  <form enctype="multipart/form-data" id="usereditForm">
                  <br>  
                    <div class="col-auto">
                      <input type="file" name="file" id="file" accept="image/png, image/jpg, image/jpeg" />
                    </div>
                   

                    <h3 class="card-title mt-4">User Profile</h3>
                    <div class="row g-3">
                      <div class="col-md">
                        <div class="form-label">First Name</div>
                        <input
                          type="text"
                          class="form-control"
                          value={{firstName}}
                          id="firstName"
                          name="firstName"
                        />
                      </div>
                      <div class="col-md">
                        <div class="form-label">lastName</div>
                        <input
                          type="text"
                          class="form-control"
                          value={{lastName}}
                          id="lastName"
                          name="lastName"
                        />
                      </div>
                      
                    </div>
                    <h3 class="card-title mt-4">Email</h3>
                    <p class="card-subtitle">This contact will be shown to
                      others publicly, so choose it carefully.</p>
                    <div>
                      <div class="row g-2">
                        <div class="col-auto">
                          <input
                            type="text"
                            id="email"
                            class="form-control w-auto"
                            value={{email}}
                            name="email"
                          />
                        </div><br>

                      </div>
                    </div>
                    {{! </div> }}
                    {{! </div> }}
                    <div class="card-footer bg-transparent mt-auto">
                      <div class="btn-list justify-content-end">
                        <a href="/timeline" class="btn">
                          Cancel
                        </a>
                        <button
                          class="btn btn-primary"
                          id="submit"
                          type="submit"
                        >
                          Submit
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
